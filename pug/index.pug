extends layout.pug

//- Setting
block setting
	- var layout = true
	- var header = true
	- var footer = true
	- var loading = false
	- var dockbar = false
	- var tooltip = true
	- var popup = false
	- var modal = true
	- var wowjs = true

block head
	include head.pug

block pages
	- bodyC.push("")
	- layoutClasses.push("")
	- bodyClasses.push("page-content")
	- dockbarClasses.push("dockbar")

//- Add Body

block body
	include page/_home.pug

block header
	include page/header.pug
block footer
	include page/footer.pug
//- Add Tooltip
block tooltip

//- Add Modal
block modal
	include page/modal_form.pug
	include page/modal_phone.pug


block javaScripts extend
	script.
		$("html").addClass("overlay-modal");
		$("#modal-form").addClass("is-show");
		
		$(".func-close-modal").click(function(){
			$("html").removeClass("overlay-modal");
			$(".modal-container").removeClass("is-show");
		});
		$(".func-open-phone").click(function(){
			$("html").addClass("overlay-modal");
			$("#modal-phone").addClass("is-show");
		});
		$(".func-close-modal").click(function(){
			$("html").removeClass("overlay-modal");
			$(".modal-container").removeClass("is-show");
		});
	